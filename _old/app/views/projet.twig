{# empty Twig template #}
{% extends "template/main.twig" %}
{%block title %}Projets{%endblock%}
{% block head %}
    <link rel="stylesheet" href="css/recherche.css">
    <link rel="stylesheet" href="css/bootstrap-tokenfield.min.css">
    <link rel="stylesheet" href="css/bootstrap-tagsinput.css">
    <link rel="stylesheet" href="css/tokenfield-typeahead.min.css">
{%endblock%}
{% block contenu %}
    <div role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#projets" aria-controls="all" role="tab" data-toggle="tab">Mes projets  <span class="badge">{{data.user_project|length}}</span></a></li>
            <li role="presentation" class=""><a href="#candidature" aria-controls="candidature" role="tab" data-toggle="tab">Candidatures en attente  <span class="badge">{{data.candidatures|length}}</span></a></li>
            <li role="presentation" class=""><a href="#candidatureRefuser" aria-controls="candidature" role="tab" data-toggle="tab">Candidatures refusées <span class="badge">{{data.candidaturesRefuser|length}}</span></a></li>
            <li role="presentation" class=""><a href="#inscrit" aria-controls="membre" role="tab" data-toggle="tab">Membre dans  <span class="badge">{{data.membres|length}}</span></a></li>
            <li role="presentation" class=""><a href="#suggestion" aria-controls="membre" role="tab" data-toggle="tab">Suggestion de projets <span class="badge">{{data.suggestions|length}}</span> </a></li>
        </ul>

      <!-- Tab panes -->
    <div class="tab-content">
        {# Toute les données en cas de query général #}
        <div role="tabpanel" class="tab-pane active" id="projets">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <form method="POST" >
                            <input type="hidden"     name="action"       value="ajout">   
                            <input class="btn btn-success btn-lg btn-block" type="submit"     name="submit"       value="ajouter">
                        </form>
                    </div>
                </div>
            </div>
            {% for projet in data.user_project%}
                <div class="jumbotron">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>{{ projet.titre }} </h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h3>{{ projet.description }}</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                             <p>
                                <table class="table table-condensed">
                                    <caption>Liste des membres</caption>
                                    <thead>
                                        <tr>
                                            <th>Pseudo</th><th>Nom</th><th>Prénom</th><th>E-Mail</th><th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for membre in projet.membres %}
                                        <tr>
                                            <td><a href="profil.php?id={{ membre.id }}">{{ membre.username }}</a></td>
                                            <td>{{ membre.nom }}</td>
                                            <td>{{ membre.prenom }}</td>
                                            <td>{{ membre.email }}</td>
                                            <td>{{ membre.description }}</td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">Aucun membre n'est inscrit au projet</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form method="POST" >
                                <input type="hidden"     name="action"       value="proposition">   
                                <select name="profil_id[]" multiple   value="propositions"  class="typeahead suggestion-recherche" placeholder="rechercher un profil"></select>
                                <input type="hidden"     name="projet_id"    value="{{projet.id}}">
                                <input class="btn btn-primary btn-lg" type="submit"     name="submit"       value="proposer">
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1 col-md-offset-4">
                            <form method="GET" action="projet.php"> 
                                <input type="hidden"     name="id"    value="{{projet.id}}">
                                <input class="btn btn-default" type="submit"       value="afficher">
                            </form>
                        </div>
                        <div class="col-md-1">
                            <form method="POST" >
                                {% if projet.publier == "0" %}
                                    <input type="hidden"     name="action"       value="publication">   
                                    <input type="hidden"     name="projet_id"    value="{{projet.id}}">
                                    <input class="btn btn-primary" type="submit"     name="submit"       value="publier">
                                {% elseif projet.publier == "1" %}
                                    <input type="hidden"     name="action"       value="dépublication">   
                                    <input type="hidden"     name="projet_id"    value="{{projet.id}}">
                                    <input class="btn btn-primary" type="submit"     name="submit"       value="dépublier">
                                {% endif %}
                            </form>
                        </div>
                        <div class="col-md-1">
                            <form method="POST" >
                                <input type="hidden"     name="action"       value="modification">   
                                <input type="hidden"     name="projet_id"    value="{{projet.id}}">
                                <input type="hidden"     name="createur_id"    value="{{projet.createur_id}}">
                                <input class="btn btn-primary" type="submit"     name="submit"       value="modifier">
                            </form>
                        </div>
                        <div class="col-md-1">
                            <form method="POST" >
                                <input type="hidden"     name="action"       value="suppression">   
                                <input type="hidden"     name="projet_id"    value="{{projet.id}}">
                                <input class="btn btn-danger" type="submit"     name="submit"       value="supprimer">
                            </form>
                        </div>
                    </div> 
                </div>
            {% else %}
                <p>Vous n'avez aucun projet</p>
            {%endfor%}
        </div>
        <div role="tabpanel" class="tab-pane" id="candidature"> 
            
                {% for candidat in data.candidatures%}
                    <p>Projet : <a href="projet.php?id={{candidat.idprojet}}">{{ candidat.titre }}</a> </p>
                {% else %}
                    <p>Vous n'êtes candidat dans aucun projet</p>
                {%endfor%}
        </div>
        <div role="tabpanel" class="tab-pane" id="inscrit"> 
            
                {% for projet in data.membres%}
                    <p>Projet : <a href="projet.php?id={{projet.idprojet}}">{{ projet.titre }}</a> </p>
                {% else %}
                    <p>Vous n'êtes membre dans aucun projet</p>
                {%endfor%}
            
            
        </div>
        <div role="tabpanel" class="tab-pane" id="suggestion"> 

                {% for suggestion in data.suggestions%}
                    <p>Projet : <a href="projet.php?id={{suggestion.idprojet}}">{{ suggestion.titre }}</a> </p>
                    <form method="POST" >
                        <input type="submit"     name="etat"     value="accepter"      class="btn btn-primary"                  >
                        <input type="submit"     name="etat"      value="refuser"       class="btn btn-danger"                  > 
                        <input type="hidden"     name="action"       value="validation_proposition"                      >
                        <input type="hidden"     name="candidat_id"     value="{{suggestion.id}}"                 >
                   </form>
                {% else %}
                    <p>Vous n'êtes proposer dans aucun projet dans aucun projet</p>
                {%endfor%}
            

        </div>
        <div role="tabpanel" class="tab-pane" id="candidatureRefuser"> 

                {% for candidat in data.candidaturesRefuser%}
                    <p>Projet : <a href="projet.php?id={{candidat.idprojet}}">{{ candidat.titre }}</a> </p>
                {% else %}
                    <p>Vous n'avez été refuser dans aucun projet, Félicitations ! ;)</p>
                {%endfor%}
            

        </div>
    </div>
        
    <script src="js/tagsinput.min.js" ></script>
    <script src="js/handlebars.js"></script>
    <script src="js/typeahead.js"></script>
    <script src="js/projet.js"></script>
{% endblock %}
