                                    <li><a href="">Données de debug</a></li>
                            </ul>
                    </li><!-- ./ dropdown Admin -->
                </ul>
            </div>
        </div>			
    </div>
    {#Affiche les message de session qui sont des messages d'erreur#}	
    {% if session.error %}
    <div class="alert alert-warning alert-dismissible">			
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button> 
        {{ session.error }}
    </div>        
    {% endif %}
    {#Affiche les message de session qui sont des messages de succes/information #}
    {% if session.message %}
    <div class="alert alert-info alert-dismissible">			
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button> 
        {{ session.message }}
    </div>    
    {% endif %}

    <div class="container" id='content'>
        {% block contenu %}{%endblock%}
    </div>
    
    
    
    <div id="footer">
        <div class="container">
            <p class="text-muted">Copyright © 2014 CPNV.</p>
        </div>
    </div>
    <span id="top-link-block" class="hidden">
        <a href="#" class="well well-sm"  onclick="$('html,body').animate({scrollTop:0},'slow');return true;">
            <i class="glyphicon glyphicon-chevron-up"></i> Back to Top
